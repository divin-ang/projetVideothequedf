@model IEnumerable<projetVideothequedf.Models.Films>

@{
    ViewBag.Title = "Index";
}

<h2>Liste de films</h2>

<p>
    @Html.ActionLink("Ajouter", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Titre
        </th>
        <th>
        Année de sortie
        </th>
       
        <th>
           Durée
        </th>
        
        <th>
           Prix
        </th>
       
        <th>
            Genre
        </th>
        <th>Nombre d'exemplaires</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.titre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.year)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.duree)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Genre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.exemplaires)
    </td>

    <td>
        @Html.ActionLink("Modifier", "Edit", new { id = item.id }) |
   
        @Html.ActionLink("Supprimer", "Delete", new { id = item.id })
    </td>
</tr>
}

</table>
