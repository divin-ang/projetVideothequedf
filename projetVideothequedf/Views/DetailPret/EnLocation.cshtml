@using projetVideothequedf.Models
@model IEnumerable<FilmRetour>

<table class="table table-striped">

    <thead>
        <tr>
            <th>Titre</th>
            <th>Pochette</th>
            <th>Durée</th>
            <th>Date de début</th>

            <th>Date de rétour</th>


        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color:red "></td>
            </tr>

        }
        else
        {  
            int i = 0;
            foreach (var item in Model)
            {
    <tr>
        <td>@item.titre</td>
        <td><img src="@Url.Content(item.icon)" /></td>
        <td>
            @{

                int h = (int)(item.duree) / 60;
                int m = (int)(item.duree) % 60;
            }
            @h h: @m

        </td>
        <td>@item.dateDebut</td>
        <td>@item.dateFin</td>

    </tr>
            }
        }
       
    </tbody>
</table>